{
  "name": "screenwright",
  "version": "0.1.18",
  "description": "Turn Playwright E2E tests into polished product demo videos",
  "license": "MIT",
  "author": "Guillaume Dupuy",
  "repository": {
    "type": "git",
    "url": "https://github.com/guidupuy/screenwright.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/guidupuy/screenwright",
  "bugs": "https://github.com/guidupuy/screenwright/issues",
  "keywords": [
    "playwright",
    "video",
    "demo",
    "screencast",
    "remotion",
    "e2e",
    "testing",
    "recording"
  ],
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "bin": {
    "screenwright": "./dist/bin/screenwright.js"
  },
  "scripts": {
    "generate:version": "node scripts/sync-version.cjs",
    "prebuild": "pnpm run generate:version",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prelint": "pnpm run generate:version",
    "lint": "tsc --noEmit",
    "postinstall": "node dist/src/scripts/postinstall.js || true",
    "prepack": "mkdir -p skill && node scripts/patch-skill.cjs && cp ../LICENSE .",
    "postpack": "rm -rf skill LICENSE"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@remotion/bundler": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "chalk": "^5.4.0",
    "commander": "^13.1.0",
    "ora": "^8.2.0",
    "playwright": "^1.52.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remotion": "^4.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@types/react": "^19.1.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "assets",
    "skill",
    "LICENSE"
  ]
}
